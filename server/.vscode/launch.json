  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Program",
      "program": "${workspaceFolder}/index.js",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "outputCapture": "std"
    },
    {
      "name": "Script 1",
      "program": "${workspaceFolder}/src/scripts/connectCategoriesToKitchens.js",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "outputCapture": "std"
    },
    {
      "name": "Script 2",
      "program": "${workspaceFolder}/src/scripts/connectMenusToKitchens.js",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Import raw data",
      "skipFiles": ["<node_internals>/**"],
      "envFile": "${workspaceFolder}/.env",
      "program": "${workspaceFolder}/server/scripts/importRawData.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Migrate raw data to new data format",
      "skipFiles": ["<node_internals>/**"],
      "envFile": "${workspaceFolder}/.env",
      "program": "${workspaceFolder}/server/scripts/migrateRawDataToNewData.js"
    }
  ]
}
